// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Observation {
  id            Int          @id @default(autoincrement())
  datetime      DateTime?
  individuals   Individual[]
  environment   ENVIRONMENT
  coordinates   Coordinates? @relation(fields: [coordinatesId], references: [id])
  coordinatesId Int?
  moonPhase     MOON_PHASE
  temperature   Int?
  weather       String?
  humidity      Int?
  note          String?
}

model Individual {
  id            Int          @id @default(autoincrement())
  fluorescence  FLUORESCENCE
  status        STATUS
  activity      ACTIVITY
  Observation   Observation? @relation(fields: [observationId], references: [id])
  observationId Int?
}

model Coordinates {
  id           Int           @id @default(autoincrement())
  observations Observation[]
  latitude     String
  longitude    String
}

enum MOON_PHASE {
  NEW_MOON
  WANING_CRESCENT
  THIRD_QUARTER
  WANING_GIBBOUS
  FULL_MOON
  WAXING_GIBBOUS
  FIRST_QUARTER
  WAXING_CRESCENT
}

enum ACTIVITY {
  UNKNOWN
  PASSIVE
  RESTING
  MOVING
  SEARCHING
  HUNTING
  AGGRESSIVE
  DEFENSIVE
  EATING
  MATING
  REPRODUCING
  DECEASED
  OTHER
}

enum FLUORESCENCE {
  DETECTED
  NOT_DETECTED
  NOT_DETERMINED
}

enum STATUS {
  ALIVE
  DECEASED
  UNKNOWN
}

enum ENVIRONMENT {
  FOREST
  GRASSLAND
  WETLAND
  SHRUBLAND
  ALPINE
  URBAN
  CAVES
  DUNES
  RIVERBEDS
  MOUNTAINS
  FARMLAND
  PARKS
  GARDENS
  OTHER
}
